alias np npm

# Misc
alias npi 'npm init'
alias npc 'npm create'
alias nppub 'npm publish'

# Scripts
alias npr 'npm run'
alias npdx 'npm dlx'
alias npex 'npm exec'
alias nprun 'npm run'

# Package.json
alias npd 'npm run dev'
alias npt 'npm test'
alias npb 'npm run build'

alias npln 'npm run lint'
alias npst 'npm start'
alias npsv 'npm run serve'

alias npfm 'npm run format'
alias nppr 'npm run preview'
alias npdo 'npm run dev --open'

# Dependencies
alias npl 'npm list'
alias npu 'npm update'
alias npin 'npm install'
alias nprm 'npm uninstall'

# Dependencies
alias npa 'npm install'

alias npad 'npm install --save-dev'
alias npap 'npm install --save-peer'
alias npae 'npm install --save-exact'
alias npao 'npm install --save-optional'

# Global
alias npga 'npm install --global'
alias npgls 'npm list --global'
alias npgup 'npm update --global'
alias npgrm 'npm uninstall --global'

# Custom
alias npnrc 'echo shamefully-hoist=true > .npmrc'
alias npnuke 'rm -rf node_modules/ package-lock.json'
